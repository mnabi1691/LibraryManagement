@model LibraryManagement.Models.LibraryUser

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Login</h1>
<hr />
@if (ViewBag.Message != null)
{
    <div><text color="red">@ViewBag.Message</text></div>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div class="form-group">
                <label id="Uname" class="control-label">User Name</label>
                <input id="Uname" name="Uname" asp-for="Uname" class="form-control" />
            </div>
            <div class="form-group">
                <label idr="Upassword" class="control-label">Password</label>
                <input name="Upassword" id="password" type="password" asp-for="Upassword" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Register for membership", "RegisterAccount", "Account")
</div>

